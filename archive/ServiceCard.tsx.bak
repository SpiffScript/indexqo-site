// src/components/services/ServiceCard.tsx
import React from "react";

type ServiceCardProps = {
  title: string;
  summary: string;
  bullets: string[];
  includes?: string[]; // subtle “one-off” cues
};

export const ServiceCard: React.FC<ServiceCardProps> = ({
  title,
  summary,
  bullets,
  includes,
}) => {
  return (
    <div className="rounded-none border border-slate-200 bg-white p-6 sm:p-7">
      <h3 className="text-lg font-semibold tracking-tight text-slate-900">
        {title}
      </h3>

      <p className="mt-3 text-sm leading-relaxed text-slate-600">{summary}</p>

      <ul className="mt-5 space-y-2 text-sm text-slate-700">
        {bullets.map((b) => (
          <li key={b} className="flex gap-3">
            <span className="mt-2 h-1 w-1 flex-none rounded-full bg-slate-400" />
            <span>{b}</span>
          </li>
        ))}
      </ul>

      {includes && includes.length > 0 && (
        <div className="mt-6 border-t border-slate-200 pt-4">
          <p className="text-xs uppercase tracking-wide text-slate-500">
            Often includes
          </p>
          <div className="mt-2 flex flex-wrap gap-2">
            {includes.map((t) => (
              <span
                key={t}
                className="rounded-none border border-slate-200 bg-slate-50 px-2.5 py-1 text-xs text-slate-600"
              >
                {t}
              </span>
            ))}
          </div>
        </div>
      )}
    </div>
  );
};
